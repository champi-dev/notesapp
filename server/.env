# Server
NODE_ENV=development
PORT=5001

# Database
MONGODB_URI=mongodb://localhost:27017/noteflow

# JWT
JWT_ACCESS_SECRET=noteflow-access-secret-key-min-32-characters-here
JWT_REFRESH_SECRET=noteflow-refresh-secret-key-min-32-characters-here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cookies
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
